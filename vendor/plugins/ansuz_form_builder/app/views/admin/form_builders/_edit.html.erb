<table class='form-table'>
  <% plugin_module.form_fields.each do |form_field| %>
    <%
      delete_link = link_to("[Delete]", admin_form_builder_form_field_path(plugin_module, form_field), :method => :delete, :confirm => "Are you sure you want to remove this form field?")
      edit_link   = link_to("[Edit]", edit_admin_form_builder_form_field_path(plugin_module, form_field))
      admin_links = [edit_link, delete_link]
    %>
    <%= render_form_field_builder_view(form_field, :locals => { :field => form_field, :admin_links => admin_links.join(" ") }) %>
  <% end %>
</table>
<br />
<%= link_to "Add a field", new_admin_form_builder_form_field_path(plugin_module), :class => "icon button add" %>
